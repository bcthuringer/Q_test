{
  "name": "q-blog",
  "version": "1.0.0",
  "description": "Serverless blog platform with user authentication and administrative approval",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../infrastructure && npm install",
    "deploy:infrastructure": "cd infrastructure && npm run deploy",
    "deploy:github-secret": "cd infrastructure && npm run deploy:github-secret",
    "deploy:cicd": "cd infrastructure && npm run deploy:cicd",
    "deploy:frontend": "cd frontend && npm run deploy",
    "deploy:monitoring": "bash scripts/deploy-monitoring.sh",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:infrastructure",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:infrastructure": "cd infrastructure && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/q-blog.git"
  },
  "keywords": [
    "serverless",
    "aws",
    "blog",
    "authentication",
    "react",
    "dynamodb",
    "lambda",
    "cognito",
    "api-gateway",
    "s3",
    "cloudfront",
    "cdk"
  ],
  "author": "Bradley",
  "contributors": [
    "Amazon Q (May 2025)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/q-blog/issues"
  },
  "homepage": "https://github.com/yourusername/q-blog#readme",
  "devDependencies": {
    "eslint": "^8.38.0",
    "prettier": "^2.8.7"
  }
}
